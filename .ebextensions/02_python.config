option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "PPLJ.settings"
    PYTHONPATH: "/opt/python/current/app/covid19:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: covid19-pplj/PPLJ/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"

container_commands:
 01_makemigrations:
  command: "source /opt/python/run/venv/bin/activate && python /opt/python/current/app/covid19-pplj/manage.py makemigrations c19_server --noinput"
  leader_only: true
 02_migrate:
  command: "source /opt/python/run/venv/bin/activate && python /opt/python/current/app/covid19-pplj/manage.py migrate --noinput"
  leader_only: true
 03_collectstatic:
  command: "source /opt/python/run/venv/bin/activate && python /opt/python/current/app/covid19-pplj/manage.py collectstatic --noinput"
 04_wsgipass:
  command: 'echo "WSGIPassAuthorization On" >> ../wsgi.conf'
